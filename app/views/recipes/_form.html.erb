<%= simple_form_for @recipe, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>

  <%= f.input :description %>

  <%= f.input :user_id %>


  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                recipes_path, :class => 'btn btn-default' %>
<% end %>
